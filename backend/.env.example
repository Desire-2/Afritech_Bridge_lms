# Environment configuration for Afritec Bridge LMS

# Flask environment: development, testing, or production
FLASK_ENV=development

# Security keys - CHANGE THESE IN PRODUCTION!
SECRET_KEY=your_secure_secret_key_here
JWT_SECRET_KEY=your_secure_jwt_secret_key_here

# Database configuration
# For development (SQLite):
SQLALCHEMY_DATABASE_URI=sqlite:///instance/afritec_lms_db.db

# For production (PostgreSQL) - uncomment and set when deploying:
# DATABASE_URL=postgresql://username:password@host:port/database

# JWT token expiration
JWT_ACCESS_TOKEN_EXPIRES_HOURS=1
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# Email Configuration (SMTP)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_DEFAULT_SENDER=noreply@afritecbridge.online

# CORS configuration (comma-separated list for multiple domains)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173,https://study.afritechbridge.online

# Port for the application (will be overridden by Render in production)
PORT=5000

# Development Notes:
# - Generate SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# - Generate JWT_SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# - For Gmail, use App Password instead of regular password
# - Set FLASK_ENV=production for production deployment