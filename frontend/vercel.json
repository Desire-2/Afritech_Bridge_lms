{
  "version": 2,
  "buildCommand": "bash ./vercel-build.sh",
  "devCommand": "npm run dev",
  "installCommand": "echo 'Installation handled by vercel-build.sh'",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}